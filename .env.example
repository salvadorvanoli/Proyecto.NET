# Copy this file to .env and configure with appropriate values
# DO NOT commit .env with real production secrets

BUILD_CONFIGURATION=Release

# Values: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# Password requirements: min 8 chars, uppercase, lowercase, numbers, symbols
SQL_SERVER_PASSWORD=YourStrong@Passw0rd
SQL_PORT=1433
DB_NAME=ProyectoNetDb

# SQL Server Edition: Developer, Express, Standard, Enterprise
MSSQL_PID=Developer

API_HTTP_PORT=5000
API_HTTPS_PORT=5443
BACKOFFICE_HTTP_PORT=5001
BACKOFFICE_HTTPS_PORT=5444
FRONTOFFICE_HTTP_PORT=5002
FRONTOFFICE_HTTPS_PORT=5445

API_BASE_URL=http://web-api:8080

SEED_DATABASE=true

# Configure allowed origins for CORS (comma-separated list)
# For local development, leave empty or use localhost URLs:
# CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:5002,https://localhost:5002
# For production, use your actual domains:
# CORS_ALLOWED_ORIGINS=https://tudominio.com,https://backoffice.tudominio.com,https://app.tudominio.com
CORS_ALLOWED_ORIGINS=

SEQ_API_KEY=
SEQ_URL=http://seq:80

# ========================================
# JWT Authentication Configuration
# ========================================
# IMPORTANT: Change these values in production and keep them secret!
# JWT_SECRET must be at least 32 characters long for HS256 algorithm
JWT_SECRET=ThisIsAVerySecretKeyForJWTTokenGenerationPleaseChangeInProduction!
JWT_ISSUER=ProyectoNet
JWT_AUDIENCE=ProyectoNetClients
JWT_LIFETIME_MINUTES=60

# JWT_SECRET=your-super-secret-key-min-32-chars
# JWT_ISSUER=https://yourdomain.com
# JWT_AUDIENCE=https://yourdomain.com
# JWT_LIFETIME_MINUTES=60

CONNECTION_STRING=
