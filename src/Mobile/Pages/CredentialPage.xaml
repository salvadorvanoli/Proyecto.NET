<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mobile.ViewModels"
             x:Class="Mobile.Pages.CredentialPage"
             x:DataType="viewmodels:CredentialViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Primary}" Padding="20" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text=" Credencial Digital" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                    <Label Text="{Binding UserName}" 
                           FontSize="18"
                           HorizontalOptions="Center"
                           TextColor="White"/>
                    <Label Text="{Binding Roles}" 
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Frame>

            <!-- User Info -->
            <Frame Padding="15" BorderColor="{StaticResource Gray200}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Informaci贸n del Usuario" FontSize="18" FontAttributes="Bold"/>
                    
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Usuario ID:" VerticalOptions="Center" WidthRequest="120" FontAttributes="Bold"/>
                        <Label Text="{Binding UserId}" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Credencial ID:" VerticalOptions="Center" WidthRequest="120" FontAttributes="Bold"/>
                        <Label Text="{Binding CredentialId}" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Status -->
            <Frame Padding="15" BorderColor="{StaticResource Gray200}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Estado" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="{Binding StatusMessage}" 
                           FontSize="14"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <VerticalStackLayout Spacing="10">
                <Button Text=" Activar Credencial" 
                        Command="{Binding StartEmulationCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                        BackgroundColor="{StaticResource Primary}"
                        x:Name="StartButton"/>

                <Button Text="革 Detener Credencial" 
                        Command="{Binding StopEmulationCommand}"
                        BackgroundColor="{StaticResource Tertiary}"
                        x:Name="StopButton"/>
                
                <Button Text=" Cerrar Sesi贸n" 
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="Black"/>
            </VerticalStackLayout>

            <!-- Instructions -->
            <Frame Padding="15" BackgroundColor="{StaticResource Gray100}">
                <VerticalStackLayout Spacing="10">
                    <Label Text=" Instrucciones" FontSize="16" FontAttributes="Bold"/>
                    <Label FontSize="12" LineBreakMode="WordWrap">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="1. Presiona 'Activar Credencial'&#x0a;"/>
                                <Span Text="2. Acerca tu celular a un punto de control&#x0a;"/>
                                <Span Text="3. El punto de control validar谩 tu acceso&#x0a;&#x0a;"/>
                                <Span Text="锔 Mant茅n NFC activado en la configuraci贸n de tu dispositivo" FontAttributes="Bold"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
