<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mobile.ViewModels"
             xmlns:models="clr-namespace:Mobile.Models"
             xmlns:converters="clr-namespace:Mobile.Converters"
             x:Class="Mobile.Pages.AccessHistoryPage"
             x:DataType="viewmodels:AccessHistoryViewModel"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:BoolToAccessIconConverter x:Key="BoolToAccessIconConverter"/>
            <converters:BoolToAccessStatusConverter x:Key="BoolToAccessStatusConverter"/>
            <converters:BoolToAccessColorConverter x:Key="BoolToAccessColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <RefreshView IsRefreshing="{Binding IsLoading}"
                 Command="{Binding RefreshCommand}">
        
        <CollectionView ItemsSource="{Binding AccessEvents}"
                        RemainingItemsThreshold="5"
                        RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">
            
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="40" VerticalOptions="Center">
                    <Label Text="ðŸ“‹"
                           FontSize="60"
                           HorizontalOptions="Center"/>
                    <Label Text="No hay eventos de acceso"
                           FontSize="18"
                           TextColor="{StaticResource Gray600}"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AccessEventDto">
                    <Frame Margin="15,10"
                           Padding="15"
                           BackgroundColor="White"
                           BorderColor="#E0E0E0"
                           CornerRadius="12"
                           HasShadow="True">
                        
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            
                            <!-- Control Point Name -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding ControlPointName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"/>

                            <!-- Status Icon -->
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding WasGranted, Converter={StaticResource BoolToAccessIconConverter}}"
                                   FontSize="28"
                                   VerticalOptions="Center"/>

                            <!-- Space Name -->
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding SpaceName}"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}"
                                   Margin="0,5,0,0"/>

                            <!-- Timestamp -->
                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                 Spacing="5"
                                                 Margin="0,10,0,0">
                                <Label Text="ðŸ•" FontSize="16"/>
                                <Label Text="{Binding Timestamp, StringFormat='{0:dd/MM/yyyy HH:mm:ss}'}"
                                       FontSize="14"
                                       TextColor="{StaticResource Gray600}"/>
                            </HorizontalStackLayout>

                            <!-- Status Text -->
                            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding WasGranted, Converter={StaticResource BoolToAccessStatusConverter}}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{Binding WasGranted, Converter={StaticResource BoolToAccessColorConverter}}"
                                   Margin="0,5,0,0"/>

                            <!-- Denial Reason (if any) -->
                            <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding DenialReason, StringFormat='âŒ {0}'}"
                                   IsVisible="{Binding DenialReason, Converter={StaticResource IsNotNullConverter}}"
                                   FontSize="13"
                                   TextColor="#DC3545"
                                   Margin="0,5,0,0"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.Footer>
                <VerticalStackLayout Padding="20"
                                   IsVisible="{Binding IsLoadingMore}">
                    <ActivityIndicator IsRunning="{Binding IsLoadingMore}"
                                     Color="{StaticResource Primary}"
                                     HeightRequest="40"/>
                    <Label Text="Cargando mÃ¡s eventos..."
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Gray600}"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </CollectionView.Footer>

        </CollectionView>
    </RefreshView>
    
</ContentPage>
