<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.AccessPoint.Pages.LoginPage"
             Title="Iniciar Sesi칩n">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            
            <Label Text="Control de Accesos"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <Label Text="Usuario" FontSize="16"/>
            <Entry Text="{Binding Username}"
                   Placeholder="Ingrese su usuario"
                   Keyboard="Default"/>
            
            <Label Text="Contrase침a" FontSize="16"/>
            <Entry Text="{Binding Password}"
                   Placeholder="Ingrese su contrase침a"
                   IsPassword="True"/>
            
            <Button Text="Iniciar Sesi칩n"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    Margin="0,20,0,0"
                    HeightRequest="50"/>
            
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding HasError}"
                   HorizontalOptions="Center"/>
            
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="#512BD4"
                              VerticalOptions="Center"
                              HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

