@page
@model Web.BackOffice.Pages.News.CreateModel
@{
    ViewData["Title"] = "Crear Noticia";
}

<h1 class="display-4 mb-4">Crear Nueva Noticia</h1>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label">Título</label>
                        <input asp-for="Input.Title" class="form-control" required />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Content" class="form-label">Contenido</label>
                        <textarea asp-for="Input.Content" class="form-control" rows="10" required></textarea>
                        <span asp-validation-for="Input.Content" class="text-danger"></span>
                        <div class="form-text">Máximo 5000 caracteres.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.PublishDate" class="form-label">Fecha de Publicación</label>
                        <input asp-for="Input.PublishDate" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="Input.PublishDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ImageUrl" class="form-label">URL de la Imagen</label>
                        <input asp-for="Input.ImageUrl" class="form-control" type="url" placeholder="https://ejemplo.com/imagen.jpg" />
                        <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                        <div class="form-text">Ingrese la URL completa de la imagen (opcional).</div>
                    </div>

                    <!-- Preview de imagen -->
                    <div class="mb-3" id="imagePreviewContainer" style="display: none;">
                        <label class="form-label">Vista previa de la imagen</label>
                        <div>
                            <img id="imagePreview" src="" alt="Preview" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Crear Noticia
                        </button>
                        <a asp-page="/News/Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Preview de imagen cuando se ingresa la URL
        const imageUrlInput = document.querySelector('input[name="Input.ImageUrl"]');
        const imagePreview = document.getElementById('imagePreview');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');

        imageUrlInput.addEventListener('input', function() {
            const url = this.value.trim();
            if (url && isValidUrl(url)) {
                imagePreview.src = url;
                imagePreviewContainer.style.display = 'block';
                imagePreview.onerror = function() {
                    imagePreviewContainer.style.display = 'none';
                };
            } else {
                imagePreviewContainer.style.display = 'none';
            }
        });

        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }
    </script>
}
