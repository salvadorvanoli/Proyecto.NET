@page
@model Web.BackOffice.Pages.ControlPoints.IndexModel
@{
    ViewData["Title"] = "Puntos de Control";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-geo-alt"></i> Puntos de Control
        </h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Punto de Control
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label for="searchTerm" class="form-label">Buscar</label>
                    <input type="text" 
                           class="form-control" 
                           id="searchTerm" 
                           name="searchTerm" 
                           value="@Model.SearchTerm" 
                           placeholder="Buscar por nombre, espacio o tipo de espacio...">
                </div>
                <div class="col-md-5">
                    <label for="spaceId" class="form-label">Filtrar por Espacio</label>
                    <select class="form-select" id="spaceId" name="spaceId">
                        <option value="">Todos los espacios</option>
                        @foreach (var space in Model.Spaces)
                        {
                            <option value="@space.Id" selected="@(Model.SelectedSpaceId == space.Id)">
                                @space.Name (@space.SpaceTypeName)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Información de resultados -->
    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.SelectedSpaceId.HasValue)
    {
        <div class="alert alert-info">
            <i class="bi bi-filter"></i> Mostrando <strong>@Model.TotalControlPoints</strong> resultado(s)
        </div>
    }

    @if (Model.DisplayedControlPoints == null || !Model.DisplayedControlPoints.Any())
    {
        @if (!string.IsNullOrWhiteSpace(Model.SearchTerm) || Model.SelectedSpaceId.HasValue)
        {
            <div class="alert alert-warning">
                <i class="bi bi-search"></i> No se encontraron puntos de control que coincidan con los filtros aplicados.
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No hay puntos de control registrados en el sistema.
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Espacio</th>
                                <th>Tipo de Espacio</th>
                                <th>Reglas de Acceso</th>
                                <th>Eventos de Acceso</th>
                                <th>Creado</th>
                                <th>Actualizado</th>
                                <th class="text-center" style="width: 200px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var controlPoint in Model.DisplayedControlPoints)
                            {
                                <tr>
                                    <td>
                                        <strong>@controlPoint.Name</strong>
                                    </td>
                                    <td>@controlPoint.SpaceName</td>
                                    <td>
                                        <span class="badge bg-info">@controlPoint.SpaceTypeName</span>
                                    </td>
                                    <td>
                                        @if (controlPoint.AccessRuleCount > 0)
                                        {
                                            <span class="badge bg-primary">@controlPoint.AccessRuleCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>
                                        @if (controlPoint.AccessEventCount > 0)
                                        {
                                            <span class="badge bg-secondary">@controlPoint.AccessEventCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@controlPoint.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <small>@controlPoint.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Details" 
                                               asp-route-id="@controlPoint.Id" 
                                               class="btn btn-outline-info" 
                                               title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" 
                                               asp-route-id="@controlPoint.Id" 
                                               class="btn btn-outline-primary" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            @if (controlPoint.AccessRuleCount == 0 && controlPoint.AccessEventCount == 0)
                                            {
                                                <button type="button" 
                                                        class="btn btn-outline-danger" 
                                                        title="Eliminar"
                                                        onclick="confirmDelete(@controlPoint.Id, '@controlPoint.Name')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" 
                                                        class="btn btn-outline-secondary" 
                                                        title="No se puede eliminar: tiene reglas o eventos de acceso asociados"
                                                        disabled>
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Paginación -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Paginación de puntos de control" class="mt-3">
                <ul class="pagination justify-content-center">
                    <!-- Botón Primera Página -->
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/ControlPoints/Index"
                           asp-route-pageNumber="1"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-selectedSpaceId="@Model.SelectedSpaceId">
                            <i class="bi bi-chevron-double-left"></i>
                        </a>
                    </li>

                    <!-- Botón Anterior -->
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="/ControlPoints/Index"
                           asp-route-pageNumber="@(Model.CurrentPage - 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-selectedSpaceId="@Model.SelectedSpaceId">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    <!-- Páginas numeradas -->
                    @{
                        var startPage = Math.Max(1, Model.CurrentPage - 2);
                        var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-page="/ControlPoints/Index"
                               asp-route-pageNumber="@i"
                               asp-route-searchTerm="@Model.SearchTerm"
                               asp-route-selectedSpaceId="@Model.SelectedSpaceId">
                                @i
                            </a>
                        </li>
                    }

                    <!-- Botón Siguiente -->
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/ControlPoints/Index"
                           asp-route-pageNumber="@(Model.CurrentPage + 1)"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-selectedSpaceId="@Model.SelectedSpaceId">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>

                    <!-- Botón Última Página -->
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="/ControlPoints/Index"
                           asp-route-pageNumber="@Model.TotalPages"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-selectedSpaceId="@Model.SelectedSpaceId">
                            <i class="bi bi-chevron-double-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="text-center text-muted small">
                Mostrando puntos de control @((Model.CurrentPage - 1) * 10 + 1) - @(Math.Min(Model.CurrentPage * 10, Model.TotalControlPoints)) de @Model.TotalControlPoints
            </div>
        }
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el punto de control <strong id="controlPointName"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('controlPointName').textContent = name;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
