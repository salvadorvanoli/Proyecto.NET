@page
@model Web.BackOffice.Pages.ControlPoints.DetailsModel
@{
    ViewData["Title"] = "Detalles del Punto de Control";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                <i class="bi bi-geo-alt"></i> Detalles del Punto de Control
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Puntos de Control</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.ControlPoint != null)
    {
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Información del Punto de Control</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.ControlPoint.Name</strong>
                        </dd>

                        <dt class="col-sm-3">Espacio:</dt>
                        <dd class="col-sm-9">@Model.ControlPoint.SpaceName</dd>

                        <dt class="col-sm-3">Tipo de Espacio:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@Model.ControlPoint.SpaceTypeName</span>
                        </dd>

                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">@Model.ControlPoint.Id</dd>

                        <dt class="col-sm-3">Tenant ID:</dt>
                        <dd class="col-sm-9">@Model.ControlPoint.TenantId</dd>

                        <dt class="col-sm-3">Creado:</dt>
                        <dd class="col-sm-9">@Model.ControlPoint.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-3">Actualizado:</dt>
                        <dd class="col-sm-9">@Model.ControlPoint.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                    </dl>

                    <hr>

                    <h6 class="mb-3">Estadísticas</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">
                                        @if (Model.ControlPoint.AccessRuleCount > 0)
                                        {
                                            <span class="badge bg-primary fs-5">@Model.ControlPoint.AccessRuleCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </h3>
                                    <p class="mb-0 small">Reglas de Acceso</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h3 class="mb-0">
                                        @if (Model.ControlPoint.AccessEventCount > 0)
                                        {
                                            <span class="badge bg-secondary fs-5">@Model.ControlPoint.AccessEventCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </h3>
                                    <p class="mb-0 small">Eventos de Acceso</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a asp-page="Edit" asp-route-id="@Model.ControlPoint.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Información
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Estado del Punto de Control</h6>
                    @if (Model.ControlPoint.AccessRuleCount > 0 || Model.ControlPoint.AccessEventCount > 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>En uso</strong>
                            <p class="mb-0 small">Este punto de control tiene reglas o eventos de acceso asociados y no puede ser eliminado.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="bi bi-check-circle"></i>
                            <strong>Sin dependencias</strong>
                            <p class="mb-0 small">Este punto de control puede ser eliminado o modificado sin restricciones.</p>
                        </div>
                    }

                    <hr>

                    <h6>Acciones Disponibles</h6>
                    <ul class="small">
                        <li>Editar nombre y espacio</li>
                        @if (Model.ControlPoint.AccessRuleCount == 0 && Model.ControlPoint.AccessEventCount == 0)
                        {
                            <li>Eliminar punto de control</li>
                        }
                        <li>Ver historial de cambios</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> No se encontró el punto de control solicitado.
    </div>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
}
