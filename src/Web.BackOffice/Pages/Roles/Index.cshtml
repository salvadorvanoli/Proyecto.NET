@page
@model Web.BackOffice.Pages.Roles.IndexModel
@using Domain.Constants
@{
    ViewData["Title"] = "Gestionar Roles";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Gestionar Roles</h1>
    <a asp-page="/Roles/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Rol
    </a>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Barra de búsqueda -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text"
                           class="form-control"
                           name="searchTerm"
                           value="@Model.SearchTerm"
                           placeholder="Buscar roles por nombre..." />
                    <button class="btn btn-primary" type="submit">Buscar</button>
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <a asp-page="/Roles/Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Información de resultados -->
@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div class="alert alert-info">
        <i class="bi bi-filter"></i> Mostrando <strong>@Model.TotalRoles</strong> resultado(s) para "<strong>@Model.SearchTerm</strong>"
    </div>
}

@if (Model.DisplayedRoles == null || !Model.DisplayedRoles.Any())
{
    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
    {
        <div class="alert alert-warning">
            <i class="bi bi-search"></i> No se encontraron roles que coincidan con "<strong>@Model.SearchTerm</strong>".
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay roles registrados en el sistema.
        </div>
    }
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Usuarios Asignados</th>
                    <th>Tenant ID</th>
                    <th>Creado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.DisplayedRoles)
                {
                    var isProtectedRole = DomainConstants.SystemRoles.IsProtectedRole(role.Name);
                    <tr>
                        <td>@role.Id</td>
                        <td>
                            <strong>@role.Name</strong>
                            @if (isProtectedRole)
                            {
                                <span class="badge bg-secondary ms-2" title="Este rol no se puede editar ni eliminar">
                                    <i class="bi bi-shield-lock"></i> Sistema
                                </span>
                            }
                        </td>
                        <td>
                            <span class="badge bg-primary">@role.UserCount usuario(s)</span>
                        </td>
                        <td>@role.TenantId</td>
                        <td>@role.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (!isProtectedRole)
                                {
                                    <a asp-page="/Roles/Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                }
                                <a asp-page="/Roles/Details" asp-route-id="@role.Id" class="btn btn-sm btn-info" title="Ver detalles">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                                @if (!isProtectedRole)
                                {
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(role.Id)" title="Eliminar">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>

                    @if (!isProtectedRole)
                    {
                        <!-- Modal de confirmación para eliminar -->
                        <div class="modal fade" id="deleteModal@(role.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(role.Id)" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel@(role.Id)">Confirmar Eliminación</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Está seguro que desea eliminar el rol <strong>@role.Name</strong>?
                                        @if (role.UserCount > 0)
                                        {
                                            <div class="alert alert-warning mt-3">
                                                <i class="bi bi-exclamation-triangle"></i> Este rol tiene <strong>@role.UserCount usuario(s)</strong> asignado(s).
                                                No podrá eliminarlo hasta que remueva todos los usuarios de este rol.
                                            </div>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@role.Id" style="display:inline;">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i> Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Paginación de roles" class="mt-3">
            <ul class="pagination justify-content-center">
                <!-- Botón Primera Página -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Roles/Index"
                       asp-route-pageNumber="1"
                       asp-route-searchTerm="@Model.SearchTerm">
                        <i class="bi bi-chevron-double-left"></i>
                    </a>
                </li>

                <!-- Botón Anterior -->
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/Roles/Index"
                       asp-route-pageNumber="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@Model.SearchTerm">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                <!-- Páginas numeradas -->
                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-page="/Roles/Index"
                           asp-route-pageNumber="@i"
                           asp-route-searchTerm="@Model.SearchTerm">
                            @i
                        </a>
                    </li>
                }

                <!-- Botón Siguiente -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Roles/Index"
                       asp-route-pageNumber="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@Model.SearchTerm">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>

                <!-- Botón Última Página -->
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/Roles/Index"
                       asp-route-pageNumber="@Model.TotalPages"
                       asp-route-searchTerm="@Model.SearchTerm">
                        <i class="bi bi-chevron-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="text-center text-muted small">
            Mostrando roles @((Model.CurrentPage - 1) * 10 + 1) - @(Math.Min(Model.CurrentPage * 10, Model.TotalRoles)) de @Model.TotalRoles
        </div>
    }
}

<div class="mt-4">
    <a asp-page="/Menu" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver al Menú
    </a>
</div>
