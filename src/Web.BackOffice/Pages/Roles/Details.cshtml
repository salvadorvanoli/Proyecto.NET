@page
@model Web.BackOffice.Pages.Roles.DetailsModel
@using Domain.Constants
@{
    ViewData["Title"] = "Detalles del Rol";
    var isProtectedRole = Model.Role != null && DomainConstants.SystemRoles.IsProtectedRole(Model.Role.Name);
}

<div class="mb-4">
    <h1 class="display-4">Detalles del Rol</h1>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Role != null)
{
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Información del Rol</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Role.Id</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Role.Name</strong>
                            @if (isProtectedRole)
                            {
                                <span class="badge bg-secondary ms-2" title="Este rol no se puede editar ni eliminar">
                                    <i class="bi bi-shield-lock"></i> Sistema
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">Tenant ID:</dt>
                        <dd class="col-sm-8">@Model.Role.TenantId</dd>

                        <dt class="col-sm-4">Usuarios Asignados:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Role.UserCount usuario(s)</span>
                        </dd>

                        <dt class="col-sm-4">Creado:</dt>
                        <dd class="col-sm-8">@Model.Role.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Actualizado:</dt>
                        <dd class="col-sm-8">@Model.Role.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>

                    <div class="d-flex gap-2 mt-3">
                        @if (!isProtectedRole)
                        {
                            <a asp-page="/Roles/Edit" asp-route-id="@Model.Role.Id" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                        }
                        <a asp-page="/Roles/Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Asignar Rol a Usuarios</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        Seleccione uno o varios usuarios para asignarles este rol. Los usuarios que ya tienen este rol aparecerán marcados.
                    </p>

                    @if (Model.CurrentUserId > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> <strong>Nota:</strong> No puede modificar sus propios roles por seguridad. Su usuario aparecerá deshabilitado en la lista.
                        </div>
                    }

                    <!-- Barra de búsqueda -->
                    <form method="get" class="mb-3">
                        <input type="hidden" name="id" value="@Model.Role.Id" />
                        <div class="input-group">
                            <input type="text"
                                   class="form-control"
                                   name="searchTerm"
                                   value="@Model.SearchTerm"
                                   placeholder="Buscar por nombre o email..." />
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                            {
                                <a asp-page="/Roles/Details" asp-route-id="@Model.Role.Id" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            }
                        </div>
                    </form>

                    <!-- Información de resultados -->
                    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                    {
                        <div class="alert alert-light border">
                            <i class="bi bi-filter"></i> Mostrando <strong>@Model.TotalUsers</strong> resultado(s) para "<strong>@Model.SearchTerm</strong>"
                        </div>
                    }

                    <form method="post" asp-page-handler="AssignRole">
                        <input type="hidden" name="roleId" value="@Model.Role.Id" />

                        @if (Model.DisplayedUsers != null && Model.DisplayedUsers.Any())
                        {
                            <div class="mb-3">
                                <label class="form-label">
                                    Seleccione usuarios (Página @Model.CurrentPage de @Model.TotalPages):
                                </label>
                                <div class="border rounded p-3" style="max-height: 400px; overflow-y: auto;">
                                    @foreach (var user in Model.DisplayedUsers)
                                    {
                                        var hasRole = Model.UsersWithRole?.Any(u => u.Id == user.Id) ?? false;
                                        var isCurrentUser = user.Id == Model.CurrentUserId;
                                        <div class="form-check mb-2">
                                            <input class="form-check-input" type="checkbox"
                                                   name="selectedUserIds"
                                                   value="@user.Id"
                                                   id="user@(user.Id)"
                                                   @(hasRole ? "checked" : "")
                                                   @(isCurrentUser ? "disabled" : "") />
                                            <label class="form-check-label @(isCurrentUser ? "text-muted" : "")" for="user@(user.Id)">
                                                <strong>@user.FullName</strong> (@user.Email)
                                                @if (hasRole)
                                                {
                                                    <span class="badge bg-success ms-2">Asignado</span>
                                                }
                                                @if (isCurrentUser)
                                                {
                                                    <span class="badge bg-warning text-dark ms-2">
                                                        <i class="bi bi-person-fill"></i> Usted
                                                    </span>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Paginación -->
                            @if (Model.TotalPages > 1)
                            {
                                <nav aria-label="Paginación de usuarios" class="mb-3">
                                    <ul class="pagination justify-content-center">
                                        <!-- Botón Primera Página -->
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" asp-page="/Roles/Details"
                                               asp-route-id="@Model.Role.Id"
                                               asp-route-pageNumber="1"
                                               asp-route-searchTerm="@Model.SearchTerm">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </a>
                                        </li>

                                        <!-- Botón Anterior -->
                                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                            <a class="page-link" asp-page="/Roles/Details"
                                               asp-route-id="@Model.Role.Id"
                                               asp-route-pageNumber="@(Model.CurrentPage - 1)"
                                               asp-route-searchTerm="@Model.SearchTerm">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>

                                        <!-- Páginas numeradas -->
                                        @{
                                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                                            var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                        }

                                        @for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                                <a class="page-link" asp-page="/Roles/Details"
                                                   asp-route-id="@Model.Role.Id"
                                                   asp-route-pageNumber="@i"
                                                   asp-route-searchTerm="@Model.SearchTerm">
                                                    @i
                                                </a>
                                            </li>
                                        }

                                        <!-- Botón Siguiente -->
                                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                            <a class="page-link" asp-page="/Roles/Details"
                                               asp-route-id="@Model.Role.Id"
                                               asp-route-pageNumber="@(Model.CurrentPage + 1)"
                                               asp-route-searchTerm="@Model.SearchTerm">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>

                                        <!-- Botón Última Página -->
                                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                            <a class="page-link" asp-page="/Roles/Details"
                                               asp-route-id="@Model.Role.Id"
                                               asp-route-pageNumber="@Model.TotalPages"
                                               asp-route-searchTerm="@Model.SearchTerm">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>

                                <div class="text-center text-muted small mb-3">
                                    Mostrando usuarios @((Model.CurrentPage - 1) * 10 + 1) - @(Math.Min(Model.CurrentPage * 10, Model.TotalUsers)) de @Model.TotalUsers
                                </div>
                            }

                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-check"></i> Guardar Asignaciones
                            </button>
                        }
                        else if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-search"></i> No se encontraron usuarios que coincidan con "<strong>@Model.SearchTerm</strong>".
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i> No hay usuarios disponibles en este tenant.
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> No se pudo cargar la información del rol.
    </div>
    <a asp-page="/Roles/Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver al Listado
    </a>
}
