@page
@model Web.BackOffice.Pages.AccessRules.EditModel
@{
    ViewData["Title"] = "Editar Regla de Acceso";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                <i class="bi bi-pencil"></i> Editar Regla de Acceso
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Reglas de Acceso</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Información de la Regla de Acceso</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Roles Section -->
                        <div class="mb-4">
                            <label asp-for="AccessRule.RoleIds" class="form-label">
                                Roles <span class="text-danger">*</span>
                            </label>
                            <select asp-for="AccessRule.RoleIds" 
                                    asp-items="Model.Roles"
                                    class="form-select"
                                    multiple
                                    size="5">
                            </select>
                            <span asp-validation-for="AccessRule.RoleIds" class="text-danger"></span>
                            <div class="form-text">
                                Seleccione los roles que tendrán acceso con esta regla.
                            </div>
                        </div>

                        <!-- Control Points Section -->
                        <div class="mb-4">
                            <label asp-for="AccessRule.ControlPointIds" class="form-label">
                                Puntos de Control <span class="text-danger">*</span>
                            </label>
                            <select asp-for="AccessRule.ControlPointIds" 
                                    asp-items="Model.ControlPoints"
                                    class="form-select"
                                    multiple
                                    size="5">
                            </select>
                            <span asp-validation-for="AccessRule.ControlPointIds" class="text-danger"></span>
                            <div class="form-text">
                                Seleccione los puntos de control donde se aplicará esta regla.
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Time Range Section -->
                        <div class="mb-3">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       id="use24x7" 
                                       asp-for="Use24x7"
                                       onchange="toggleTimeInputs()">
                                <label class="form-check-label" for="use24x7">
                                    <strong>Acceso 24/7</strong> (Sin restricción de horario)
                                </label>
                            </div>
                            
                            <div id="timeInputs">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="AccessRule.StartTime" class="form-label">Hora Inicio</label>
                                        <input asp-for="AccessRule.StartTime" 
                                               type="time" 
                                               class="form-control" />
                                        <span asp-validation-for="AccessRule.StartTime" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="AccessRule.EndTime" class="form-label">Hora Fin</label>
                                        <input asp-for="AccessRule.EndTime" 
                                               type="time" 
                                               class="form-control" />
                                        <span asp-validation-for="AccessRule.EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Date Range Section -->
                        <div class="mb-3">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       id="usePermanent" 
                                       asp-for="UsePermanent"
                                       onchange="toggleDateInputs()">
                                <label class="form-check-label" for="usePermanent">
                                    <strong>Acceso Permanente</strong> (Sin fecha de expiración)
                                </label>
                            </div>
                            
                            <div id="dateInputs">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label asp-for="AccessRule.StartDate" class="form-label">Fecha Inicio</label>
                                        <input asp-for="AccessRule.StartDate" 
                                               type="date" 
                                               class="form-control" />
                                        <span asp-validation-for="AccessRule.StartDate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="AccessRule.EndDate" class="form-label">Fecha Fin</label>
                                        <input asp-for="AccessRule.EndDate" 
                                               type="date" 
                                               class="form-control" />
                                        <span asp-validation-for="AccessRule.EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Guardar Cambios
                            </button>
                            <a asp-page="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="bi bi-eye"></i> Ver Detalles
                            </a>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle"></i> Ayuda
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Editar Regla de Acceso</h6>
                    <p class="small">
                        Modifique los parámetros de la regla de acceso. Los cambios se aplicarán inmediatamente.
                    </p>
                    <hr>
                    <h6>Validaciones</h6>
                    <ul class="small">
                        <li>Debe seleccionar al menos un rol</li>
                        <li>Debe seleccionar al menos un punto de control</li>
                        <li>Si no es 24/7, debe especificar horario</li>
                        <li>Si no es permanente, debe especificar fechas</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleTimeInputs() {
            const use24x7 = document.getElementById('use24x7').checked;
            const timeInputs = document.getElementById('timeInputs');
            timeInputs.style.display = use24x7 ? 'none' : 'block';
            
            if (use24x7) {
                document.querySelector('input[name="AccessRule.StartTime"]').value = '';
                document.querySelector('input[name="AccessRule.EndTime"]').value = '';
            }
        }

        function toggleDateInputs() {
            const usePermanent = document.getElementById('usePermanent').checked;
            const dateInputs = document.getElementById('dateInputs');
            dateInputs.style.display = usePermanent ? 'none' : 'block';
            
            if (usePermanent) {
                document.querySelector('input[name="AccessRule.StartDate"]').value = '';
                document.querySelector('input[name="AccessRule.EndDate"]').value = '';
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleTimeInputs();
            toggleDateInputs();
        });
    </script>
}
