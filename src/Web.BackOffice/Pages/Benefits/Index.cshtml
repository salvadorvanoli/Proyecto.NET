@page
@model Web.BackOffice.Pages.Benefits.IndexModel
@{
    ViewData["Title"] = "Beneficios";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-gift-fill"></i> Beneficios
        </h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Beneficio
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-5">
                    <label for="benefitTypeId" class="form-label">Tipo de Beneficio</label>
                    <select class="form-select" id="benefitTypeId" name="benefitTypeId">
                        <option value="">Todos los tipos</option>
                        @foreach (var item in Model.BenefitTypes)
                        {
                            <option value="@item.Value" selected="@(item.Value == Model.SelectedBenefitTypeId?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-5">
                    <label for="status" class="form-label">Estado</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Todos los estados</option>
                        <option value="active" selected="@(Model.StatusFilter == "active")">Solo disponibles</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Benefits.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <small class="text-muted">
                        Mostrando @((Model.CurrentPage - 1) * 10 + 1) - @Math.Min(Model.CurrentPage * 10, Model.TotalBenefits) de @Model.TotalBenefits beneficios
                    </small>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo de Beneficio</th>
                                <th class="text-center">Cupos</th>
                                <th class="text-center">Cantidad</th>
                                <th>Vigencia</th>
                                <th class="text-center">Estado</th>
                                <th>Creado</th>
                                <th class="text-center" style="width: 150px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var benefit in Model.DisplayedBenefits)
                            {
                                <tr class="@(!benefit.IsValid ? "table-secondary" : "")">
                                    <td>
                                        <strong>@benefit.BenefitTypeName</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(benefit.HasAvailableQuotas ? "bg-info" : "bg-secondary")">
                                            @benefit.Quotas
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">
                                            @benefit.Quantity
                                        </span>
                                    </td>
                                    <td>
                                        @if (benefit.IsPermanent)
                                        {
                                            <span class="badge bg-primary">
                                                <i class="bi bi-infinity"></i> Permanente
                                            </span>
                                        }
                                        else
                                        {
                                            <small>
                                                <i class="bi bi-calendar-range"></i>
                                                @benefit.StartDate - @benefit.EndDate
                                            </small>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(benefit.CanBeConsumed ? "bg-success" : "bg-secondary")">
                                            @(benefit.CanBeConsumed ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>
                                        <small>@benefit.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="Details" 
                                               asp-route-id="@benefit.Id" 
                                               class="btn btn-outline-info" 
                                               title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="Edit" 
                                               asp-route-id="@benefit.Id" 
                                               class="btn btn-outline-primary" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-danger" 
                                                    title="Eliminar"
                                                    onclick="confirmDelete(@benefit.Id, '@benefit.BenefitTypeName')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Paginación de beneficios" class="mt-3">
                        <ul class="pagination justify-content-center mb-0">
                            <!-- First page -->
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="./Index" 
                                   asp-route-pageNumber="1"
                                   asp-route-benefitTypeId="@Model.SelectedBenefitTypeId"
                                   asp-route-status="@Model.StatusFilter">
                                    <i class="bi bi-chevron-double-left"></i>
                                </a>
                            </li>
                            
                            <!-- Previous page -->
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="./Index" 
                                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                                   asp-route-benefitTypeId="@Model.SelectedBenefitTypeId"
                                   asp-route-status="@Model.StatusFilter">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            @{
                                var startPage = Math.Max(1, Model.CurrentPage - 2);
                                var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" 
                                       asp-page="./Index" 
                                       asp-route-pageNumber="@i"
                                       asp-route-benefitTypeId="@Model.SelectedBenefitTypeId"
                                       asp-route-status="@Model.StatusFilter">
                                        @i
                                    </a>
                                </li>
                            }

                            <!-- Next page -->
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="./Index" 
                                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                                   asp-route-benefitTypeId="@Model.SelectedBenefitTypeId"
                                   asp-route-status="@Model.StatusFilter">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            
                            <!-- Last page -->
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-page="./Index" 
                                   asp-route-pageNumber="@Model.TotalPages"
                                   asp-route-benefitTypeId="@Model.SelectedBenefitTypeId"
                                   asp-route-status="@Model.StatusFilter">
                                    <i class="bi bi-chevron-double-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i>
            @if (Model.SelectedBenefitTypeId.HasValue || !string.IsNullOrWhiteSpace(Model.StatusFilter))
            {
                <span>No se encontraron beneficios que coincidan con los filtros seleccionados.</span>
            }
            else
            {
                <span>No hay beneficios registrados.</span>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el beneficio de tipo <strong id="benefitTypeName"></strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" id="deleteForm" style="display: inline;">
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, typeName) {
            document.getElementById('deleteId').value = id;
            document.getElementById('benefitTypeName').textContent = typeName;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
