@page
@model Web.BackOffice.Pages.Benefits.EditModel
@{
    ViewData["Title"] = "Editar Beneficio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil"></i> Editar Beneficio
                </h1>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Benefit.BenefitTypeId" class="form-label">
                                Tipo de Beneficio <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Benefit.BenefitTypeId" 
                                    asp-items="Model.BenefitTypes" 
                                    class="form-select">
                                <option value="">Seleccione un tipo de beneficio</option>
                            </select>
                            <span asp-validation-for="Benefit.BenefitTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Benefit.Quotas" class="form-label">
                                Cupos Disponibles <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Benefit.Quotas" 
                                   type="number" 
                                   class="form-control" 
                                   min="1" 
                                   placeholder="Ej: 100" />
                            <span asp-validation-for="Benefit.Quotas" class="text-danger"></span>
                            <small class="text-muted">
                                Modifique el n√∫mero total de cupos disponibles
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Benefit.IsPermanent" 
                                       class="form-check-input" 
                                       type="checkbox" 
                                       id="isPermanent"
                                       onchange="toggleDateInputs()" />
                                <label class="form-check-label" for="isPermanent">
                                    Beneficio Permanente
                                </label>
                            </div>
                            <small class="text-muted">
                                Los beneficios permanentes no tienen fecha de vencimiento
                            </small>
                        </div>

                        <div id="dateInputs">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Benefit.StartDate" class="form-label">
                                            Fecha de Inicio
                                        </label>
                                        <input asp-for="Benefit.StartDate" 
                                               type="date" 
                                               class="form-control" />
                                        <span asp-validation-for="Benefit.StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Benefit.EndDate" class="form-label">
                                            Fecha de Fin
                                        </label>
                                        <input asp-for="Benefit.EndDate" 
                                               type="date" 
                                               class="form-control" />
                                        <span asp-validation-for="Benefit.EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleDateInputs() {
            const isPermanent = document.getElementById('isPermanent').checked;
            const dateInputs = document.getElementById('dateInputs');
            const startDate = document.querySelector('input[name="Benefit.StartDate"]');
            const endDate = document.querySelector('input[name="Benefit.EndDate"]');
            
            if (isPermanent) {
                dateInputs.style.display = 'none';
                startDate.value = '';
                endDate.value = '';
            } else {
                dateInputs.style.display = 'block';
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleDateInputs();
        });
    </script>
}
