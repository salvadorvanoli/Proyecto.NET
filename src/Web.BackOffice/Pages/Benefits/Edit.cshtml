@page
@model Web.BackOffice.Pages.Benefits.EditModel
@{
    ViewData["Title"] = "Editar Beneficio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil"></i> Editar Beneficio
                </h1>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Benefit.BenefitTypeId" class="form-label">
                                Tipo de Beneficio <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Benefit.BenefitTypeId" 
                                    asp-items="Model.BenefitTypes" 
                                    class="form-select">
                                <option value="">Seleccione un tipo de beneficio</option>
                            </select>
                            <span asp-validation-for="Benefit.BenefitTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Benefit.Quotas" class="form-label">
                                Cupos Disponibles <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Benefit.Quotas" 
                                   type="number" 
                                   class="form-control" 
                                   min="1" 
                                   placeholder="Ej: 100" />
                            <span asp-validation-for="Benefit.Quotas" class="text-danger"></span>
                            <small class="text-muted">
                                Modifique el número total de cupos disponibles
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> Si deja vacías las fechas de inicio y fin, el beneficio será permanente.
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Benefit.StartDate" class="form-label">
                                        Fecha de Inicio (Opcional)
                                    </label>
                                    <input asp-for="Benefit.StartDate" 
                                           type="date" 
                                           class="form-control" />
                                    <span asp-validation-for="Benefit.StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Benefit.EndDate" class="form-label">
                                        Fecha de Fin (Opcional)
                                    </label>
                                    <input asp-for="Benefit.EndDate" 
                                               type="date" 
                                               class="form-control" />
                                    <span asp-validation-for="Benefit.EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
