@page
@model Web.BackOffice.Pages.BenefitTypes.DetailsModel
@{
    ViewData["Title"] = "Detalles del Tipo de Beneficio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-gift"></i> Detalles del Tipo de Beneficio
                </h1>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.BenefitType.Name</strong>
                        </dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.BenefitType.Description</dd>

                        <dt class="col-sm-3">Beneficios:</dt>
                        <dd class="col-sm-9">
                            @if (Model.BenefitType.BenefitCount > 0)
                            {
                                <span class="badge bg-primary">@Model.BenefitType.BenefitCount beneficio(s)</span>
                            }
                            else
                            {
                                <span class="text-muted">Sin beneficios asociados</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Creado:</dt>
                        <dd class="col-sm-9">
                            <small class="text-muted">@Model.BenefitType.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</small>
                        </dd>

                        <dt class="col-sm-3">Última actualización:</dt>
                        <dd class="col-sm-9">
                            <small class="text-muted">@Model.BenefitType.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</small>
                        </dd>
                    </dl>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.BenefitType.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                        </div>
                        <div>
                            @if (Model.BenefitType.BenefitCount == 0)
                            {
                                <button type="button" 
                                        class="btn btn-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                            else
                            {
                                <button type="button" 
                                        class="btn btn-outline-secondary" 
                                        title="No se puede eliminar: tiene beneficios asociados"
                                        disabled>
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.BenefitType.BenefitCount > 0)
            {
                <div class="alert alert-info mt-3" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Información:</strong> Este tipo de beneficio no puede ser eliminado porque tiene 
                    <strong>@Model.BenefitType.BenefitCount beneficio(s)</strong> asociado(s). 
                    Elimine primero los beneficios antes de eliminar este tipo.
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar el tipo de beneficio <strong>@Model.BenefitType.Name</strong>?</p>
                <p class="text-danger"><i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form method="post" asp-page-handler="Delete" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.BenefitType.Id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>
