@page
@model Web.BackOffice.Pages.BenefitTypes.DetailsModel
@{
    ViewData["Title"] = "Detalles del Tipo de Beneficio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="bi bi-gift"></i> Detalles del Tipo de Beneficio
                </h1>
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            @if (Model.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.BenefitType.Name</strong>
                        </dd>

                        <dt class="col-sm-3">Descripción:</dt>
                        <dd class="col-sm-9">@Model.BenefitType.Description</dd>

                        <dt class="col-sm-3">Beneficios:</dt>
                        <dd class="col-sm-9">
                            @if (Model.BenefitType.BenefitCount > 0)
                            {
                                <span class="badge bg-primary">@Model.BenefitType.BenefitCount beneficio(s)</span>
                            }
                            else
                            {
                                <span class="text-muted">Sin beneficios asociados</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Creado:</dt>
                        <dd class="col-sm-9">
                            <small class="text-muted">@Model.BenefitType.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</small>
                        </dd>

                        <dt class="col-sm-3">Última actualización:</dt>
                        <dd class="col-sm-9">
                            <small class="text-muted">@Model.BenefitType.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</small>
                        </dd>
                    </dl>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-page="Edit" asp-route-id="@Model.BenefitType.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver al listado
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.BenefitType.BenefitCount > 0)
            {
                <div class="alert alert-info mt-3" role="alert">
                    <i class="bi bi-info-circle"></i>
                    <strong>Información:</strong> Este tipo de beneficio no puede ser eliminado porque tiene 
                    <strong>@Model.BenefitType.BenefitCount beneficio(s)</strong> asociado(s). 
                    Elimine primero los beneficios antes de eliminar este tipo.
                </div>
            }
        </div>
    </div>
</div>
