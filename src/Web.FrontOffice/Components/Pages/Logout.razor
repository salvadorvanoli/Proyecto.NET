@page "/logout"
@rendermode InteractiveServer
@using Web.FrontOffice.Services
@inject NavigationManager Navigation
@inject HttpClient HttpClient
@inject ILogger<Logout> Logger
@inject CustomAuthenticationStateProvider AuthStateProvider

<PageTitle>Cerrando Sesi贸n...</PageTitle>

<div class="logout-container">
    <div class="logout-card">
        <div class="logout-content">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Cerrando sesi贸n...</span>
            </div>
            <h3>Cerrando sesi贸n</h3>
            <p class="text-muted">Por favor espera un momento...</p>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Logging out user");
            
            // Llamar al AuthController para hacer logout (limpia la cookie)
            var logoutUrl = Navigation.ToAbsoluteUri("/api/auth/logout").ToString();
            await HttpClient.PostAsync(logoutUrl, null);
            
            // Actualizar el estado de autenticaci贸n
            AuthStateProvider.MarkUserAsLoggedOut();
            
            // Redirigir sin forceLoad
            Navigation.NavigateTo("/login", forceLoad: false);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during logout");
            AuthStateProvider.MarkUserAsLoggedOut();
            Navigation.NavigateTo("/login", forceLoad: false);
        }
    }
}
