@page "/logout"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Web.FrontOffice.Services
@inject CustomAuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation
@inject ILogger<Logout> Logger

<PageTitle>Cerrando Sesión...</PageTitle>

<div class="logout-container">
    <div class="logout-card">
        <div class="logout-content">
            <div class="spinner-border text-primary mb-3" role="status">
                <span class="visually-hidden">Cerrando sesión...</span>
            </div>
            <h3>Cerrando sesión</h3>
            <p class="text-muted">Por favor espera un momento...</p>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("Logging out user");
            await AuthStateProvider.MarkUserAsLoggedOutAsync();
            
            // Esperar un momento para que se complete el proceso
            await Task.Delay(500);
            
            // Redirigir al login
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during logout");
            // Redirigir al login de todos modos
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }
}
