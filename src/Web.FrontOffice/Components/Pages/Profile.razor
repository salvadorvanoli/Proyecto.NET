@page "/perfil"
@rendermode InteractiveServer
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using Web.FrontOffice.Components.Shared
@using Web.FrontOffice.Services
@using Microsoft.AspNetCore.Components.Authorization

@inject IUserApiService UserApiService
@inject NavigationManager Navigation
@inject ILogger<Profile> Logger
@inject AuthenticationStateProvider AuthenticationStateProvider
<div class="profile-container">
    @if (isLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-3">Cargando perfil...</p>
        </div>
    }
    else if (usuario == null)
    {
        <div class="alert alert-warning">
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <p>@errorMessage</p>
                @if (errorMessage.Contains("iniciar sesión"))
                {
                    <hr />
                    <a href="Auth/Login" class="btn btn-primary">Iniciar Sesión</a>
                }
            }
            else
            {
                <p>No se pudo cargar la información del usuario.</p>
            }
        </div>
    }
    else
    {
        <div class="profile-header">
            <PageHeader Title="Mi Perfil" Subtitle="Información personal y estado de cuenta" />
            @if (!modoEdicion)
            {
                <button class="secondary-button edit-button" @onclick="ActivarEdicion" type="button">
                    <span>Editar Perfil</span>
                </button>
            }
        </div>

        <div class="profile-grid">
            <!-- Datos Personales -->
            <Card Title="Datos Personales">
                @if (modoEdicion)
                {
                    <div class="edit-form">
                        <div class="form-group">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-input" @bind="editModel.Email" />
                            <small class="text-muted">Este es tu identificador único en el sistema</small>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Nombre</label>
                            <input type="text" class="form-input" @bind="editModel.FirstName" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Apellido</label>
                            <input type="text" class="form-input" @bind="editModel.LastName" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Fecha de Nacimiento</label>
                            <input type="date"
                                   class="form-input"
                                   @bind="editModel.DateOfBirth"
                                   @bind:format="yyyy-MM-dd" />
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-3">@errorMessage</div>
                        }
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success mt-3">@successMessage</div>
                        }

                        <div class="form-actions">
                            <button class="primary-button" @onclick="GuardarCambios" type="button" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <span>Guardar Cambios</span>
                            </button>
                            <button class="secondary-button" @onclick="CancelarEdicion" type="button" disabled="@isSaving">
                                <span>Cancelar</span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <InfoField Label="Email" Value="@usuario.Email" />
                    <InfoField Label="Nombre Completo" Value="@usuario.FullName" />
                    <InfoField Label="Fecha de Nacimiento" Value="@usuario.DateOfBirth.ToString("dd/MM/yyyy")" />
                }
            </Card>

            <!-- Información de Cuenta -->
            <Card Title="Información de Cuenta">
                <InfoField Label="Fecha de Creación" Value="@usuario.CreatedAt.ToString("dd/MM/yyyy")" />
                <InfoField Label="Última Actualización" Value="@usuario.UpdatedAt.ToString("dd/MM/yyyy HH:mm")" />
            </Card>
        </div>

        <!-- Acciones Rápidas -->
        <div class="quick-actions">
            <SectionTitle Title="Acciones Rápidas" />
            <div class="actions-grid">
                <a href="/mis-beneficios" class="action-link">
                    <PrimaryButton Text="Mis Beneficios" />
                </a>
                <a href="/historial-accesos" class="action-link">
                    <PrimaryButton Text="Historial de Accesos" />
                </a>
            </div>
        </div>
    }
</div>

@code {
    // Estado de carga y edición
    private bool isLoading = true;
    private bool modoEdicion = false;
    private bool isSaving = false;

    // Mensajes
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    // Datos del usuario desde el backend
    private UserResponse? usuario;

    // Modelo de edición
    private UpdateUserRequest editModel = new();

    protected override async Task OnInitializedAsync()
    {
        await CargarUsuario();
    }

    private async Task CargarUsuario()
    {
        isLoading = true;
        errorMessage = string.Empty;

        try
        {
            // Obtener userId desde los claims del usuario autenticado
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            var userIdClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
            if (userIdClaim == null || !int.TryParse(userIdClaim.Value, out var userId))
            {
                errorMessage = "Error al obtener el ID del usuario.";
                Logger.LogError("NameIdentifier claim not found or invalid");
                isLoading = false;
                return;
            }

            Logger.LogInformation("Usuario autenticado con ID: {UserId}", userId);

            // Obtener usuario desde el backend
            usuario = await UserApiService.GetUserByIdAsync(userId);

            if (usuario != null)
            {
                Logger.LogInformation("Usuario cargado: {Email}", usuario.Email);
                editModel = new UpdateUserRequest
                {
                    Email = usuario.Email,
                    FirstName = usuario.FirstName,
                    LastName = usuario.LastName,
                    DateOfBirth = usuario.DateOfBirth
                };
            }
            else
            {
                Logger.LogWarning("GetUserByIdAsync retornó null para userId {UserId}", userId);
                errorMessage = "No se encontró el usuario.";
            }
        }
        catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "Error HTTP al cargar usuario: {StatusCode}", ex.StatusCode);
            errorMessage = $"Error al cargar el perfil: {ex.Message}";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error inesperado al cargar usuario");
            errorMessage = "Error inesperado al cargar el perfil. Intenta nuevamente.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ActivarEdicion()
    {
        modoEdicion = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Reinicializar modelo de edición
        editModel = new UpdateUserRequest
        {
            Email = usuario!.Email,
            FirstName = usuario.FirstName,
            LastName = usuario.LastName,
            DateOfBirth = usuario.DateOfBirth
        };
    }

    private async Task GuardarCambios()
    {
        if (usuario == null) return;

        isSaving = true;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        try
        {
            // Llamar al backend para actualizar el usuario
            var usuarioActualizado = await UserApiService.UpdateUserAsync(usuario.Id, editModel);

            // Actualizar datos locales con la respuesta del backend
            usuario = usuarioActualizado;

            successMessage = "Perfil actualizado correctamente.";
            modoEdicion = false;

            Logger.LogInformation("Usuario {UserId} actualizado correctamente", usuario.Id);
        }
        catch (HttpRequestException ex)
        {
            Logger.LogError(ex, "Error HTTP al actualizar usuario: {StatusCode}", ex.StatusCode);

            if (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
            {
                errorMessage = "Sesión expirada. Por favor, inicia sesión nuevamente.";
                await Task.Delay(2000);
                Navigation.NavigateTo("/login-dev");
            }
            else if (ex.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                errorMessage = "Los datos proporcionados no son válidos.";
            }
            else
            {
                errorMessage = $"Error al guardar los cambios: {ex.Message}";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error inesperado al actualizar usuario");
            errorMessage = "Error inesperado al guardar los cambios. Intenta nuevamente.";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CancelarEdicion()
    {
        modoEdicion = false;
        errorMessage = string.Empty;
        successMessage = string.Empty;

        // Restaurar datos originales (ya están en 'usuario')
    }
}
