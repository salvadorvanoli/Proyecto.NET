@inject NavigationManager Navigation

@code {
    protected override void OnInitialized()
    {
        // Obtener la URL actual para usarla como ReturnUrl
        var returnUrl = Navigation.ToBaseRelativePath(Navigation.Uri);
        
        // Redirigir al login con el ReturnUrl
        if (!string.IsNullOrEmpty(returnUrl) && returnUrl != "login")
        {
            Navigation.NavigateTo($"/login?ReturnUrl={Uri.EscapeDataString(returnUrl)}", forceLoad: true);
        }
        else
        {
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }
}
