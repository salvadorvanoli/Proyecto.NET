@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Web.FrontOffice.Services.Interfaces
@using Web.FrontOffice.Services
@using System.Security.Claims
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject TenantThemeService ThemeService

<div class="top-row ps-3 navbar navbar-dark" style="background-color: @secondaryColor">
    <div class="container-fluid">
        <a class="navbar-brand" href="">@tenantName</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <div class="nav-link nav-dropdown" @onclick="ToggleProfileMenu">
                    <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> 
                    <span class="dropdown-label">Mi Perfil</span>
                    <span class="dropdown-arrow @(perfilMenuExpanded ? "expanded" : "")">▼</span>
                </div>
                @if (perfilMenuExpanded)
                {
                    <div class="nav-submenu">
                        <NavLink class="nav-link nav-sublink" href="perfil">
                            Ver Perfil
                        </NavLink>
                        <NavLink class="nav-link nav-sublink" href="mis-beneficios">
                            Mis Beneficios
                        </NavLink>
                        <NavLink class="nav-link nav-sublink" href="historial-accesos">
                            Historial de Accesos
                        </NavLink>
                    </div>
                }
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="canjear-beneficio">
                    <span class="bi bi-ticket-fill-nav-menu" aria-hidden="true"></span> Canjear Beneficio
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="acceso-nfc">
                    <span class="bi bi-wifi-nav-menu" aria-hidden="true"></span> Acceso NFC
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool perfilMenuExpanded = false;
    private bool isLoggedIn = false;
    private string primaryColor = "#0A3D62";
    private string secondaryColor = "#1976D2";
    private string tenantName = "Universidad";
    private int tenantId = 1;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckAuthenticationState();
            await LoadTenantTheme();
            StateHasChanged();
        }
    }

    private async Task CheckAuthenticationState()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            isLoggedIn = user?.Identity?.IsAuthenticated ?? false;
            
            if (isLoggedIn)
            {
                var tenantIdClaim = user.FindFirst("TenantId");
                if (tenantIdClaim != null && int.TryParse(tenantIdClaim.Value, out var id))
                {
                    tenantId = id;
                }
            }
        }
        catch
        {
            isLoggedIn = false;
        }
    }

    private async Task LoadTenantTheme()
    {
        try
        {
            await ThemeService.LoadThemeAsync(tenantId);
            primaryColor = ThemeService.GetPrimaryColor();
            secondaryColor = ThemeService.GetSecondaryColor();
            tenantName = ThemeService.GetTenantName();
        }
        catch
        {
            // Si falla, usar valores por defecto
        }
    }

    private void ToggleProfileMenu()
    {
        perfilMenuExpanded = !perfilMenuExpanded;
    }
}
